:root {
    /* Color Palette - Modern & Premium */
    --primary: hsl(250, 84%, 54%);
    --primary-dark: hsl(250, 84%, 44%);
    --primary-light: hsl(250, 84%, 64%);
    --secondary: hsl(280, 70%, 60%);
    --accent: hsl(320, 85%, 65%);

    /* Backgrounds */
    --bg-main: hsl(240, 21%, 8%);
    --bg-card: hsla(240, 20%, 12%, 0.6);
    --bg-input: hsla(240, 15%, 15%, 0.8);
    --bg-hover: hsla(250, 84%, 54%, 0.1);

    /* Text Colors */
    --text-primary: hsl(0, 0%, 98%);
    --text-secondary: hsl(240, 5%, 70%);
    --text-muted: hsl(240, 5%, 50%);

    /* Borders */
    --border-color: hsla(240, 15%, 25%, 0.5);
    --border-focus: var(--primary);

    /* Shadows */
    --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.4);
    --shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.5);
    --shadow-glow: 0 0 20px rgba(124, 58, 237, 0.3);

    /* Spacing */
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 1.5rem;
    --spacing-lg: 2rem;
    --spacing-xl: 3rem;

    /* Border Radius */
    --radius-sm: 8px;
    --radius-md: 12px;
    --radius-lg: 16px;
    --radius-full: 9999px;

    /* Transitions */
    --transition-fast: 150ms ease;
    --transition-normal: 250ms ease;
    --transition-slow: 400ms ease;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background: var(--bg-main);
    color: var(--text-primary);
    line-height: 1.6;
    min-height: 100vh;
    overflow-x: hidden;
    padding-bottom: 100px;
    /* Space for floating dock */
}

/* Animated Background */
body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
        radial-gradient(circle at 20% 50%, hsla(250, 84%, 54%, 0.15) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, hsla(280, 70%, 60%, 0.15) 0%, transparent 50%),
        radial-gradient(circle at 40% 20%, hsla(320, 85%, 65%, 0.1) 0%, transparent 50%);
    z-index: -1;
    animation: backgroundShift 20s ease infinite;
}

@keyframes backgroundShift {

    0%,
    100% {
        opacity: 1;
    }

    50% {
        opacity: 0.8;
    }
}

#root {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

/* Container */
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
    width: 100%;
}

/* Auth Container */
.auth-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-md);
}

/* Auth Card */
.auth-card {
    background: var(--bg-card);
    backdrop-filter: blur(20px);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    width: 100%;
    max-width: 440px;
    box-shadow: var(--shadow-lg);
    animation: slideUp 0.5s ease;
}

@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Logo/Title */
.auth-header {
    text-align: center;
    margin-bottom: var(--spacing-lg);
}

.auth-title {
    font-size: 2rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--primary-light), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--spacing-xs);
}

.auth-subtitle {
    color: var(--text-secondary);
    font-size: 0.95rem;
}

/* Form Elements */
.form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
}

.form-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
}

.form-label {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-secondary);
}

.form-input {
    background: var(--bg-input);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-sm);
    padding: 0.875rem 1rem;
    font-size: 1rem;
    color: var(--text-primary);
    transition: all var(--transition-normal);
    font-family: inherit;
}

.form-input:focus {
    outline: none;
    border-color: var(--border-focus);
    box-shadow: 0 0 0 3px hsla(250, 84%, 54%, 0.1);
}

.form-input::placeholder {
    color: var(--text-muted);
}

/* Buttons */
.btn {
    padding: 0.875rem 1.5rem;
    border: none;
    border-radius: var(--radius-sm);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all var(--transition-normal);
    font-family: inherit;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-xs);
    position: relative;
    overflow: hidden;
}

.btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
}

.btn:hover::before {
    width: 300px;
    height: 300px;
}

.btn-primary {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    color: white;
    box-shadow: var(--shadow-sm);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md), var(--shadow-glow);
}

.btn-primary:active {
    transform: translateY(0);
}

.btn-sm {
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
}

.btn-google {
    background: white;
    color: hsl(0, 0%, 20%);
    border: 1px solid var(--border-color);
}

.btn-google:hover {
    background: hsl(0, 0%, 95%);
    transform: translateY(-2px);
    box-shadow: var(--shadow-sm);
}

.btn-secondary {
    background: var(--bg-input);
    color: var(--text-primary);
    border: 1px solid var(--border-color);
}

.btn-secondary:hover {
    background: var(--bg-hover);
    border-color: var(--primary);
}

.btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none !important;
}

/* Divider */
.divider {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    margin: var(--spacing-md) 0;
    color: var(--text-muted);
    font-size: 0.875rem;
}

.divider::before,
.divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: var(--border-color);
}

/* Links */
.auth-link {
    text-align: center;
    margin-top: var(--spacing-md);
    color: var(--text-secondary);
    font-size: 0.9rem;
}

.auth-link a {
    color: var(--primary-light);
    text-decoration: none;
    font-weight: 600;
    transition: color var(--transition-fast);
}

.auth-link a:hover {
    color: var(--primary);
    text-decoration: underline;
}

/* Error/Success Messages */
.message {
    padding: 0.875rem 1rem;
    border-radius: var(--radius-sm);
    font-size: 0.9rem;
    margin-bottom: var(--spacing-md);
    animation: slideDown 0.3s ease;
}

@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.message-error {
    background: hsla(0, 70%, 50%, 0.1);
    border: 1px solid hsla(0, 70%, 50%, 0.3);
    color: hsl(0, 70%, 70%);
}

.message-success {
    background: hsla(140, 70%, 50%, 0.1);
    border: 1px solid hsla(140, 70%, 50%, 0.3);
    color: hsl(140, 70%, 70%);
}

/* Loading Spinner */
.spinner {
    width: 20px;
    height: 20px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-top-color: white;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

.spinner-large {
    width: 48px;
    height: 48px;
    border: 4px solid rgba(124, 58, 237, 0.2);
    border-top-color: var(--primary);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}

/* Dashboard */
.dashboard {
    min-height: 100vh;
    padding: var(--spacing-xl) var(--spacing-md);
    max-width: 1400px;
    margin: 0 auto;
}

/* Welcome Header */
.welcome-header {
    margin-bottom: var(--spacing-xl);
    text-align: center;
}

.welcome-title {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--primary-light), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--spacing-xs);
}

.welcome-subtitle {
    color: var(--text-secondary);
    font-size: 1.1rem;
}

/* Workspace Grid */
.workspace-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
}

/* Workspace Card */
.workspace-card {
    background: linear-gradient(135deg,
            hsla(240, 20%, 15%, 0.7) 0%,
            hsla(240, 20%, 12%, 0.5) 100%);
    backdrop-filter: blur(30px) saturate(180%);
    -webkit-backdrop-filter: blur(30px) saturate(180%);
    border: 1px solid hsla(250, 84%, 64%, 0.2);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
    transition: all var(--transition-normal);
    animation: slideUp 0.4s ease;
    position: relative;
    overflow: hidden;
}

/* Liquid glass shine effect */
.workspace-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg,
            transparent,
            hsla(250, 84%, 64%, 0.1),
            transparent);
    transition: left 0.5s ease;
}

.workspace-card:hover::before {
    left: 100%;
}

.workspace-card::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle,
            hsla(250, 84%, 64%, 0.05) 0%,
            transparent 70%);
    opacity: 0;
    transition: opacity var(--transition-slow);
}

.workspace-card:hover {
    transform: translateY(-6px) scale(1.02);
    box-shadow:
        var(--shadow-lg),
        0 0 40px rgba(124, 58, 237, 0.4),
        inset 0 1px 0 hsla(250, 84%, 64%, 0.3);
    border-color: hsla(250, 84%, 64%, 0.5);
}

.workspace-card:hover::after {
    opacity: 1;
}

.workspace-card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--spacing-md);
    gap: var(--spacing-sm);
    position: relative;
    z-index: 1;
}

.workspace-name {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    flex: 1;
}

.role-badge {
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.role-owner {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    color: white;
}

.role-collaborator {
    background: hsla(200, 70%, 50%, 0.2);
    color: hsl(200, 70%, 70%);
    border: 1px solid hsla(200, 70%, 50%, 0.3);
}

.role-reviewer {
    background: hsla(280, 70%, 50%, 0.2);
    color: hsl(280, 70%, 70%);
    border: 1px solid hsla(280, 70%, 50%, 0.3);
}

.workspace-stats {
    display: flex;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-md);
    position: relative;
    z-index: 1;
}

.stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
}

.stat-icon {
    font-size: 1.5rem;
}

.stat-value {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-primary);
}

.stat-label {
    font-size: 0.75rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.workspace-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--spacing-md);
    border-top: 1px solid var(--border-color);
    position: relative;
    z-index: 1;
}

.last-active {
    font-size: 0.875rem;
    color: var(--text-muted);
}

/* Create Workspace Card */
.workspace-card-create {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 250px;
    border: 2px dashed var(--border-color);
    background: transparent;
}

.workspace-card-create:hover {
    border-color: var(--primary);
    background: var(--bg-hover);
}

.create-workspace-content {
    text-align: center;
}

.create-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-sm);
    opacity: 0.7;
}

.create-text {
    font-size: 1.25rem;
    color: var(--text-secondary);
}

/* Empty State */
.empty-state {
    text-align: center;
    padding: var(--spacing-xl) var(--spacing-md);
    max-width: 500px;
    margin: 0 auto;
}

.empty-state-icon {
    font-size: 5rem;
    margin-bottom: var(--spacing-md);
    opacity: 0.8;
    animation: float 3s ease-in-out infinite;
}

.empty-state-icon svg {
    filter: drop-shadow(0 4px 20px rgba(124, 58, 237, 0.4));
}

@keyframes float {

    0%,
    100% {
        transform: translateY(0px);
    }

    50% {
        transform: translateY(-10px);
    }
}

.empty-state-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--spacing-sm);
}

.empty-state-text {
    color: var(--text-secondary);
    font-size: 1.1rem;
    margin-bottom: var(--spacing-lg);
}

/* Loading Container */
.loading-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-xl);
    gap: var(--spacing-md);
}

.error-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-md);
    padding: var(--spacing-xl);
}

/* Modal */
.modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    animation: fadeIn 0.2s ease;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

.modal-content {
    background: var(--bg-card);
    backdrop-filter: blur(20px);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    width: 90%;
    max-width: 500px;
    box-shadow: var(--shadow-lg);
    animation: slideUp 0.3s ease;
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-lg);
}

.modal-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
}

.modal-close {
    background: transparent;
    border: none;
    color: var(--text-secondary);
    font-size: 1.5rem;
    cursor: pointer;
    padding: 0.25rem;
    line-height: 1;
    transition: color var(--transition-fast);
}

.modal-close:hover {
    color: var(--text-primary);
}

.modal-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
}

.modal-actions {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: flex-end;
    margin-top: var(--spacing-md);
}

/* Floating Dock */
.floating-dock {
    position: fixed;
    bottom: var(--spacing-lg);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: var(--spacing-xs);
    background: linear-gradient(135deg,
            hsla(240, 20%, 15%, 0.8) 0%,
            hsla(240, 20%, 12%, 0.6) 100%);
    backdrop-filter: blur(40px) saturate(200%);
    -webkit-backdrop-filter: blur(40px) saturate(200%);
    border: 1px solid hsla(250, 84%, 64%, 0.3);
    border-radius: var(--radius-full);
    padding: 0.75rem 1rem;
    box-shadow:
        var(--shadow-lg),
        0 0 60px rgba(124, 58, 237, 0.3),
        inset 0 1px 0 hsla(250, 84%, 64%, 0.2);
    z-index: 999;
    animation: slideUp 0.5s ease, dockGlow 3s ease-in-out infinite;
}

@keyframes dockGlow {

    0%,
    100% {
        box-shadow:
            var(--shadow-lg),
            0 0 60px rgba(124, 58, 237, 0.3),
            inset 0 1px 0 hsla(250, 84%, 64%, 0.2);
    }

    50% {
        box-shadow:
            var(--shadow-lg),
            0 0 80px rgba(124, 58, 237, 0.5),
            inset 0 1px 0 hsla(250, 84%, 64%, 0.3);
    }
}

.dock-item {
    position: relative;
    background: transparent;
    border: none;
    color: var(--text-secondary);
    font-size: 1.5rem;
    width: 48px;
    height: 48px;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--transition-normal);
    display: flex;
    align-items: center;
    justify-content: center;
}

.dock-item:hover {
    background: var(--bg-hover);
    color: var(--text-primary);
    transform: translateY(-4px);
}

.dock-item-active {
    background: var(--bg-hover);
    color: var(--primary-light);
}

.dock-icon {
    font-size: 1.5rem;
}

.dock-tooltip {
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(-8px);
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    padding: 0.5rem 0.75rem;
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
    transition: opacity var(--transition-fast);
}

.dock-item:hover .dock-tooltip {
    opacity: 1;
}

/* Placeholder Title */
.placeholder-title {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--primary-light), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--spacing-sm);
}

.placeholder-subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin-bottom: var(--spacing-lg);
}

.placeholder-info {
    background: var(--bg-input);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-sm);
    padding: var(--spacing-md);
    margin-bottom: var(--spacing-lg);
}

.placeholder-info code {
    background: var(--bg-hover);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
    color: var(--primary-light);
}

.placeholder-page {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-xl);
}

.placeholder-page h1 {
    font-size: 3rem;
    background: linear-gradient(135deg, var(--primary-light), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--spacing-sm);
}

.placeholder-page p {
    font-size: 1.25rem;
    color: var(--text-secondary);
}

/* Responsive */
@media (max-width: 768px) {
    .workspace-grid {
        grid-template-columns: 1fr;
    }

    .floating-dock {
        bottom: var(--spacing-sm);
        padding: 0.5rem 0.75rem;
    }

    .dock-item {
        width: 40px;
        height: 40px;
        font-size: 1.25rem;
    }
}

@media (max-width: 640px) {
    .auth-card {
        padding: var(--spacing-lg);
    }

    .auth-title {
        font-size: 1.75rem;
    }

    .welcome-title {
        font-size: 2rem;
    }

    .workspace-card {
        padding: var(--spacing-md);
    }
}

/* Workspace Page */
.workspace-page {
    min-height: 100vh;
    padding: var(--spacing-xl) var(--spacing-md) 120px;
    max-width: 1600px;
    margin: 0 auto;
}

/* Workspace Header */
.workspace-header {
    margin-bottom: var(--spacing-xl);
    text-align: center;
}

.workspace-header-content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-xs);
}

.workspace-title {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, var(--primary-light), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.workspace-id {
    font-size: 0.875rem;
    color: var(--text-muted);
    text-align: center;
}


/* Workspace Content - VS Code Style Layout (No Cards) */
.workspace-content {
    display: grid;
    grid-template-columns: 420px 1fr;
    gap: 0;
    min-height: calc(100vh - 200px);
}

/* Members Panel - VS Code Explorer Style Sidebar */
.members-panel {
    padding: var(--spacing-md);
    background: hsla(240, 20%, 8%, 0.6);
    border-right: 1px solid var(--border-color);
    overflow-y: auto;
    max-height: calc(100vh - 200px);
}

/* Sessions Panel - VS Code Editor Style Main Area */
.sessions-panel {
    padding: var(--spacing-xl);
    background: transparent;
    overflow-y: auto;
}

.panel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-lg);
    padding-bottom: var(--spacing-md);
    border-bottom: 1px solid var(--border-color);
}

.panel-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
}

.member-count,
.session-count {
    background: var(--bg-hover);
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-full);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--primary-light);
}

/* Members Panel */
.members-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    max-height: 600px;
    overflow-y: auto;
    padding-right: var(--spacing-xs);
}

.members-list::-webkit-scrollbar {
    width: 6px;
}

.members-list::-webkit-scrollbar-track {
    background: var(--bg-input);
    border-radius: 3px;
}

.members-list::-webkit-scrollbar-thumb {
    background: var(--primary);
    border-radius: 3px;
}

/* Member Item */
.member-item {
    display: flex;
  flex-direction: column;
    
    
    padding: var(--spacing-md);
    background: var(--bg-input);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-sm);
    transition: all var(--transition-normal);
}

.member-item:hover {
    background: var(--bg-hover);
    border-color: var(--primary);
}

.member-current {
    border-color: var(--primary-light);
    background: hsla(250, 84%, 54%, 0.1);
}

.member-owner {
    border-left: 3px solid var(--primary);
}

.member-info {
    flex: 1;
}

.member-name {
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
}

.member-you-badge {
    background: var(--primary);
    color: white;
    padding: 0.125rem 0.5rem;
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 600;
}

.member-email {
    font-size: 0.875rem;
    color: var(--text-muted);
}

/* Sessions Panel */
.sessions-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
}

.sessions-empty {
    text-align: center;
    padding: var(--spacing-xl);
}

.empty-icon {
    margin-bottom: var(--spacing-md);
    opacity: 0.7;
    animation: float 3s ease-in-out infinite;
}

.empty-icon svg {
    filter: drop-shadow(0 4px 20px rgba(124, 58, 237, 0.4));
}

.empty-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--spacing-sm);
}

.empty-text {
    color: var(--text-secondary);
    margin-bottom: var(--spacing-lg);
}

/* Session Card */
.session-card {
    background: var(--bg-input);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    padding: var(--spacing-md);
    transition: all var(--transition-normal);
}

.session-card:hover {
    border-color: var(--primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.session-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--spacing-sm);
}

.session-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-primary);
}

.status-badge {
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
}

.status-active {
    background: hsla(140, 70%, 50%, 0.2);
    color: hsl(140, 70%, 70%);
    border: 1px solid hsla(140, 70%, 50%, 0.3);
}

.status-ended {
    background: hsla(0, 0%, 50%, 0.2);
    color: hsl(0, 0%, 70%);
    border: 1px solid hsla(0, 0%, 50%, 0.3);
}

.session-meta {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-md);
}

.language-badge {
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 600;
    color: white;
    text-transform: uppercase;
}

.session-creator {
    font-size: 0.875rem;
    color: var(--text-muted);
}

.session-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--spacing-sm);
    border-top: 1px solid var(--border-color);
}

.session-date {
    font-size: 0.875rem;
    color: var(--text-muted);
}

/* Form Hint */
.form-hint {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-top: 0.25rem;
}

/* Responsive */
@media (max-width: 1024px) {
    .workspace-content {
        grid-template-columns: 1fr;
    }

    .members-panel {
        max-height: 400px;
    }

    .members-list {
        max-height: 300px;
    }
}

@media (max-width: 640px) {
    .workspace-title {
        font-size: 2rem;
    }

    .workspace-header-content {
        flex-direction: column;
        align-items: flex-start;
    }

    .panel-header {
        flex-direction: column;
        align-items: flex-start;
        gap: var(--spacing-sm);
    }
}